<Window x:Class="BatchRename.ChangeReplaceRuleParameters"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatchRename"
        mc:Ignorable="d"
        Title="Edit ReplaceRule Parameters" Width="400" Height="250">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="50,50,50,50">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,20">
            <TextBlock Text="Needle: "/>
            <TextBox x:Name="needlesTextBox" Width="200"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,20">
            <TextBlock Text="Replacer: "/>
            <TextBox x:Name="replacerTextBox" Width="200"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="okButton"  Content="OK" Width="40" Margin="0,0,40,0" Click="okButton_Click"/>
            <Button x:Name="cancelButton" Content="Cancel" Width="40" Click="cancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
